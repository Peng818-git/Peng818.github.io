    <canvas id="circleCanvas" width="400" height="300"></canvas>

    <script>
        const canvas = document.getElementById("circleCanvas");
        const ctx = canvas.getContext("2d");

        // 畫外圈（環）
        ctx.beginPath();
        ctx.arc(200, 150, 100, 0, 2 * Math.PI);
        ctx.strokeStyle = "#003366";
        ctx.lineWidth = 5;
        ctx.stroke();

        // 畫內圈
        ctx.beginPath();
        ctx.arc(200, 150, 50, 0, 2 * Math.PI);
        ctx.strokeStyle = "#66a3ff";
        ctx.lineWidth = 3;
        ctx.stroke();

        // 畫兩圓之間的連線
        ctx.beginPath();
        ctx.moveTo(200 + 50, 150);
        ctx.lineTo(200 + 100, 150);
        ctx.strokeStyle = "#ff6600";
        ctx.lineWidth = 3;
        ctx.stroke();

        // 標註說明文字
        ctx.font = "16px Microsoft JhengHei";
        ctx.fillStyle = "#333";
        ctx.fillText("圓與環的連結示意", 130, 280);
    </script>
